{
  "name": "ssdeploy",
  "version": "0.7.1",
  "description": "Netlify replacement to deploy simple websites with better flexibility and speed and without vendor lock-in",
  "keywords": [
    "deploy",
    "google cloud",
    "cloudflare",
    "netlify"
  ],
  "bin": "./bin.js",
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "eslint . && yaspeller *.md"
  },
  "dependencies": {
    "bytes": "^3.1.0",
    "dotenv": "^10.0.0",
    "folder-hash": "^4.0.1",
    "hasha": "^5.2.2",
    "make-dir": "^3.1.0",
    "open": "^8.3.0",
    "picocolors": "^1.0.0"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/ssdeploy",
  "devDependencies": {
    "@logux/eslint-config": "^46.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "clean-publish": "^3.4.1",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.0.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.6.1",
    "typescript": "^4.4.4",
    "yaspeller": "^7.2.0"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "no-console": "off"
    }
  },
  "eslintIgnore": [
    "lib/dirs.js"
  ],
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "clean-publish": {
    "cleanDocs": true
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "Netlify",
      "CDN",
      "TLS",
      "RTT",
      "crontab",
      "Nginx",
      "CI",
      "IAM",
      "base64",
      "Cloudflare",
      "GitHub",
      "subdomain",
      "DNSSEC",
      "HTST",
      "configs",
      "js"
    ]
  }
}
